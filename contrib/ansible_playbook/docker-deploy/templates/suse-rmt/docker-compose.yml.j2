version: '2'
volumes:
  db_storage:
    driver: local

services:
  db:
    image: mariadb:10.3
    restart: always
    volumes:
      - db_storage:/run/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD={{ mysql_root_password }}
      - MYSQL_DATABASE={{ mysql_database }}
      - MYSQL_USER={{ mysql_user }}
      - MYSQL_PASSWORD={{ mysql_password }}

  rmt:
    # Bulding the docker have it be separate
    image: '{{ docker_image }}'
    environment:
      - MYSQL_HOST={{ mysql_host }}
      - MYSQL_ROOT_PASSWORD={{ mysql_root_password }}
      - MYSQL_DATABASE={{ mysql_database }}
      - MYSQL_USER={{ mysql_user }}
      - MYSQL_PASSWORD={{ mysql_password }}
    volumes:
      - /data:/usr/share/rmt/public/repo
    depends_on:
      - db
    command: tail -f /dev/null